<h2>{{theBook.title}}</h2>
<h2>Edit this Book</h2>


<form action="/books/{{theBook._id}}/update" method="post">

<label>Title: </label>
<input type="text" name="title" value="{{theBook.title}}">
<br>
<br>

<label>Author: </label>
<select name= "author" required = "true">
    {{#each allTheAuthors}}
            <option value = "null"></option> //makes author selector empty 

        <option value="{{this._id}}">{{this.name}} {{this.lastName}}</option>
    
    {{/each}}
</select>
<br>
<br>

<label>Description: </label>
<textarea name="description" cols="30" rows="10" >{{theBook.description}}</textarea>
<br>
<br>

<label>Rating: </label>
<input type="number" name="rating" value="{{theBook.rating}}">
<br>
<br>
<button type="submit">Save Book</button>


</form>